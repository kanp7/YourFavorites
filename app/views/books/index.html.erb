<table class="table">
	<thead>
		<tr>
			<th>投稿者</th>
			<th>タイトル</th>
			<th>作者</th>
			<th>件名</th>
			<th>投稿日時</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
		<tr>
			<td><%= link_to user_path(book.user_id) do %>
				<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback:"no_image.jpg",size:'40x40' %><br>
				<%= book.user.name %>
				<% end %>
			</td>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.subject %></td>
			<td><%= book.created_at.to_s(:datetime_jp) %></td>
			<td><%= link_to "詳細", book_path(book) %></td>
		</tr>
	</tbody>
	<% end %>
</table>