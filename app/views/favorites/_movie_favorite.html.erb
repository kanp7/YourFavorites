<% if user_signed_in? %>
	<% if movie.favorited_by?(current_user) %>
		<%= link_to movie_favorites_path(movie), method: :delete, remote: true do %>
		<i class="glyphicon glyphicon-star" aria-hidden="true"></i>
		<%= movie.favorites.count %> 件のお気に入り
		<% end %>
	<% else %>
		<%= link_to movie_favorites_path(movie), method: :post, remote: true do %>
		<i class="glyphicon glyphicon-star-empty" aria-hidden="true"></i>
		<%= movie.favorites.count %> 件のお気に入り
		<% end %>
	<% end %>
<% else %>
	<p><i class="glyphicon glyphicon-star" aria-hidden="true"></i><%= movie.favorites.count %>件のお気に入り</p>
<% end %>