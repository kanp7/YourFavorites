<table>
	<thead>
		<tr>
			<th>User</th>
			<th>Title</th>
			<th>Subject</th>
		</tr>
	</thead>
	<% @movies.each do |movie| %>
	<tbody>
		<tr>
			<td><%= link_to user_path(movie.user_id) do %>
				<%= attachment_image_tag movie.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback:"no_image.jpg",size:'40x40' %><br>
				<%= movie.user.name %>
				<% end %>
			</td>
			<td><%= movie.title %></td>
			<td><%= movie.subject %></td>
			<td><%= link_to "詳細", movie_path(movie) %></td>
		</tr>
	</tbody>
	<% end %>
</table>