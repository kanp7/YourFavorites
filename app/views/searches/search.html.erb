<h2><%= @select_model == '1' ? "ユーザー" : "投稿" %>検索 検索ワード: "<%= @word %>"</h2>

<table class="table table-hover table-inverse">
<!--postの検索結果 -->
<% if @select_model == '2' %>
  <thead>
    <tr>
        <th>投稿者</th>
        <th>タイトル</th>
        <th>件名</th>
    </tr>
  </thead>
  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td>
          <%= link_to(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
<!-- userの検索結果 -->
  <% else %>
  <thead>
    <tr>
      <th>名前</th>
      <th>自己紹介</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
       <tr>
         <td><%= link_to user do %>
            <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
             <%= user.name %>
             <% end %>
         </td>
         <td><%= user.introduction%></td>
         <td><%= render 'users/follow_form', user: user %></td>
       </tr>
    <% end %>
  </tbody>
<% end %>
</table>
