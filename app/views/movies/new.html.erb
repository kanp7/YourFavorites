<%= form_for @movie do |f| %>
<div>
	<%= f.label :title %>
	<%= f.text_field :title%>
</div>

<div>
	<%= f.label :subject %>
	<%= f.text_field :subject%>
</div>

<div>
	<%= f.label :body %>
	<%= f.text_area :body %>
</div>

<div>
	<%= f.label :category %>
	<%= f.collection_select(:category_id, @movie_categories, :id, :category) %>
</div>

<div>
	<%= f.submit "投稿" %>
</div>
<% end %>

