<div class="panel panel-default">
	<% book.comments.each do |book_comment| %>
	<div class="panel">
		<%= link_to user_path(book_comment.user_id) do %>
			<%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback:"no_image.jpg",size:'40x40' %>
			<%= book_comment.user.name %>
		<% end %>

		<%= book_comment.comment %>
		<% if book_comment.user == current_user %>
			<%= link_to "削除",book_comment_path(book_id: book.id, id: book_comment.id),method: :delete, remote: true,  class: "btn btn-danger" %>
		<% end %>
	</div>
	<% end %>
</div>