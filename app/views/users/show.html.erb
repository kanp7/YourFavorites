<h2><%= @user.name %> さんのページ</h2>
<div class="col-xs-4">
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg",size: '100x100', class: "img-circle" %>
	<table>
		<tbody>
			<tr>
				<th>ユーザー名</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
				<th><%= link_to @user.following.count, following_user_path(@user), class: "follow_count_#{@user.id}" %> フォロー&emsp;</th>
				<th><%= link_to @user.followers.count, followers_user_path(@user), class: "follower_count_#{@user.id}" %> フォロワー</th>
			</tr>
			<tr>
				<th><%= link_to "お気に入り", user_favorites_path(@user) %></th>
			</tr>
			<tr>
				<th><%= link_to "投稿一覧",user_posts_user_path(@user) %></th>
			</tr>
		</tbody>
	</table>
</div>

<div class="col-xs-8">
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="text-center">自己紹介文</div>
		</div>
		<div class="panel-body">
			<%=  simple_format(@user.introduction) %>
		</div>
	</div>
</div>

<div class="col-xs-12">
	<% if user_signed_in? %>
		<% if @user.id == current_user.id %>
			<div class="mypage_btn">
				<%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-primary" %>
			</div>
			<div class="mypage_btn">
				<%= link_to "本の感想を投稿", new_book_path, class: "btn btn-primary" %>
			</div>
			<div class="mypage_btn">
				<%= link_to "映像作品の感想を投稿", new_movie_path, class: "btn btn-primary" %>
			</div>
		<% end %>
	<% end %>

	<div class="follow_form_<%= @user.id %>">
		<%= render 'follow_form', user: @user %>
	</div>
</div>

